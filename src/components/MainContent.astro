---
interface Props {
  classes?: string
  title: string
  subtitle: string
  paragraph: string
  button?: string
}

const { classes, title, subtitle, paragraph, button } = Astro.props
---

<section class={`grid gap-4 ${classes}`}>
  <p
    class="text-base leading-8 tracking-[.2em] uppercase text-clr-accent lg:text-lg"
  >
    {subtitle}
  </p>
  <h2
    class={`${
      title === "Front-End Developer" ? "text-clr-primary" : "text-white"
    }  font-extrabold text-5xl lg:text-6xl leading-[64px] tracking-[-1px]`}
  >
    {
      title === "Hey, I'm Aayush Jaiswal" ? (
        <>
          Hey, I'm <br /> Aayush Jaiswal
        </>
      ) : (
        title
      )
    }
  </h2>
  <p class="leading-[2.2rem]">
    {paragraph}
  </p>

  {
    button && (
      <a
        href={button === "Hire Me" ? "#contact" : "/resume.pdf"}
        download={button !== "Hire Me" ? "" : null}
        class={`${
          button === "Hire Me"
            ? "bg-clr-accent text-white hover:bg-clr-accent/80 transition-all duration-200 ease-in-out"
            : "bg-white drop-shadow-lg"
        } font-bold uppercase py-2 px-5 rounded-sm flex items-center tracking-wider gap-2 mt-2 w-fit`}
      >
        <span>{button}</span>
        <i
          class={`fa-solid fa-chevron-${
            button === "Hire Me" ? "right" : "down"
          } pb-1`}
        />
      </a>
    )
  }
</section>
